{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": [
    "*.ts",
    "server.ts",
    "mockDataGenerator.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
